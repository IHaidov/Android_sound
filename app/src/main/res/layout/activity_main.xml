<?xml version="1.0" encoding="utf-8"?>
<androidx.gridlayout.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity"
    app:rowCount="3"
    app:columnCount="2">

    <ImageButton
        android:id="@+id/imageButtonCat"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/cat"
        app:layout_column="0"
        app:layout_row="0"
        tools:srcCompat="@drawable/cat" />

    <ImageButton
        android:id="@+id/imageButtonDog"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/dog"
        android:scaleType="fitXY"
        android:scrollbarThumbHorizontal="@drawable/dog"
        android:scrollbarThumbVertical="@drawable/dog"
        android:scrollbarTrackHorizontal="@drawable/dog"
        android:scrollbarTrackVertical="@drawable/dog"
        android:src="@drawable/dog"
        app:layout_column="1"
        app:layout_row="0"
        tools:srcCompat="@drawable/dog" />

    <ImageButton
        android:id="@+id/imageButtonWolf"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/wolf"
        app:layout_column="0"
        app:layout_row="1"
        tools:srcCompat="@drawable/wolf" />

    <ImageButton
        android:id="@+id/imageButtonEagle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/eagle"
        app:layout_column="1"
        app:layout_row="1"
        tools:srcCompat="@drawable/eagle" />

    <ImageButton
        android:id="@+id/imageButtonCow"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/cow"
        app:layout_column="0"
        app:layout_row="2"
        tools:srcCompat="@drawable/cow" />

    <ImageButton
        android:id="@+id/imageButtonChicken"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/chicken"
        app:layout_column="1"
        app:layout_row="2"
        tools:srcCompat="@drawable/chicken" />

</androidx.gridlayout.widget.GridLayout>